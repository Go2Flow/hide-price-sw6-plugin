<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Go2FlowHidePrices\Subscriber\ProductSubscriber">
            <argument type="service" id="Go2FlowHidePrices\Service\PriceBlockValidationService"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Go2FlowHidePrices\Service\PriceBlockValidationService" class="Go2FlowHidePrices\Service\PriceBlockValidationService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="product.repository"/>
        </service>
    </services>
</container>